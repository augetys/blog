<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hope.blog.blog.mapper.BlogArticleMapper">

        <!-- 通用查询映射结果 -->
        <resultMap id="BaseResultMap" type="com.hope.blog.blog.model.BlogArticle">
                    <id column="id" property="id"/>
                    <result column="title" property="title"/>
                    <result column="summary" property="summary"/>
                    <result column="content" property="content"/>
                    <result column="is_publish" property="isPublish"/>
                    <result column="tag_id" property="tagId"/>
                    <result column="cover" property="cover"/>
                    <result column="click_count" property="clickCount"/>
                    <result column="is_original" property="isOriginal"/>
                    <result column="author" property="author"/>
                    <result column="articles_part" property="articlesPart"/>
                    <result column="article_category_id" property="articleCategoryId"/>
                    <result column="sort" property="sort"/>
                    <result column="open_comment" property="openComment"/>
                    <result column="create_time" property="createTime"/>
                    <result column="update_time" property="updateTime"/>
        </resultMap>

        <!-- 通用查询结果列 -->
        <sql id="Base_Column_List">
            id,
            title,
            summary,
            content,
            is_publish,
            tag_id,
            cover,
            click_count,
            is_original,
            author,
            articles_part,
            article_category_id,
            sort,
            open_comment,
            create_time,
            update_time
        </sql>

    <select id="getHotArticle" resultType="com.hope.blog.blog.model.BlogArticle">
        select * from blog_article order by click_count desc limit 10
    </select>

</mapper>